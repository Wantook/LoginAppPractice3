<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:startup.Views"
             x:Class="startup.Views.SubscriptionPage">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Choose a Subscription" FontSize="32" HorizontalOptions="Center" />

        <Button Text="Basic Subscription" 
                Command="{Binding SelectBasicSubscriptionCommand}" />

        <Button Text="Pro Subscription" 
                Command="{Binding SelectProSubscriptionCommand}" />

        <Button Text="Premium Subscription" 
                Command="{Binding SelectPremiumSubscriptionCommand}" />
    </VerticalStackLayout>
</ContentPage>
